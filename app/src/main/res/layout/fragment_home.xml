<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="pae.healz.HomeFragment">


    <ImageButton
        android:id="@+id/button_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calculate"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Mariona and Marc!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/button_measure"
        android:layout_alignEnd="@+id/button_measure"
        android:layout_gravity="center_horizontal|bottom" />


</FrameLayout>
