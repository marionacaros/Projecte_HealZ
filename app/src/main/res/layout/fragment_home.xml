<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="pae.healz.HomeFragment">


    <ImageButton
        android:id="@+id/button_measure"
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:src="@drawable/calculate"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAST MEASURE"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_above="@+id/button_measure"
        android:layout_alignEnd="@+id/button_measure"
        android:layout_gravity="center_horizontal|top" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAST MEASURE"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_above="@+id/button_measure"
        android:layout_alignEnd="@+id/button_measure"
        android:layout_gravity="center_horizontal|top" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:id="@+id/Home_name"
        android:layout_below="@+id/photoButton"
        android:layout_alignParentStart="true"
        android:layout_gravity="top" />


</FrameLayout>
