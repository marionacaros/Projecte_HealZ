<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pae.healz.Perfil">

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:id="@+id/photoButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/Name"
        android:layout_below="@+id/photoButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:inputType="textPersonName"
        android:text="Second Name"
        android:ems="10"
        android:id="@+id/Second_Name"
        android:layout_below="@+id/photoButton"
        android:layout_toEndOf="@+id/Name" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/spinner_sex"
        android:layout_below="@+id/Name"
        android:layout_toEndOf="@+id/sex" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:textSize="23dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sex"
        android:id="@+id/sex"
        android:layout_alignTop="@+id/spinner_sex"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/spinner_age"
        android:layout_below="@+id/Second_Name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:textSize="23dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Age"
        android:id="@+id/Age"
        android:layout_below="@+id/Second_Name"
        android:layout_alignEnd="@+id/photoButton" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:textSize="23dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weight"
        android:id="@+id/Weight"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/sex"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinner_weight" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/spinner_weight"
        android:layout_alignTop="@+id/Weight"
        android:layout_toStartOf="@+id/Age" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/spinner_height"
        android:layout_alignTop="@+id/spinner_weight"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:textSize="23dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Height"
        android:id="@+id/Height"
        android:layout_alignTop="@+id/spinner_height"
        android:layout_toStartOf="@+id/spinner_height" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button_save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
